<% provide(:title, "Account") %>
<h1>Account</h1>


<% if current_user.group.nil? %>
  <%= link_to "Create Group", new_group_path, :class => "btn" %>
<% else %>
    <p>You are a member of <%= "#{current_user.group.name}.   " %><%= link_to 'Leave Group', {:controller => "groups", :action => "remove", :id => current_user.id }, :class => 'btn btn-sm btn-danger', data: { confirm: "This will remove you from the group and the group admin will no longer be able to view your trips. Are you sure you want to do this?" } %></p>
<% end %>

