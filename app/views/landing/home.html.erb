 <div class="parentbox">
    <div class="childbox">
        <div class="row margin-row">
            <h1>Drivesense</h1>
        </div>

        <div class="row ">
            <div class="span4">
                <%= link_to (image_tag 'note.png',:size => '150x150'), news_path %>
            </div>

            <div class="span4">
                <% if not user_signed_in?%>
                    <%= link_to (image_tag 'pin.png', :size => "102x170", :mouseover => 'pin_green.png'), new_user_session_path  %>
                <%else%>
                    <%= link_to (image_tag 'pin.png', :size => "102x170", :mouseover => 'pin_green.png'), {:controller => "trip_viewer", :action => "all_trips", :id =>current_user.id }  %>
                <%end%>
            </div>

            <div class="span4">
                <%= link_to (image_tag 'car.png',:size => "170x150", :mouseover => "car_green.png"), about_path %>
            </div>
        </div>
        
        <div class="row">
            <div class="span4">
                <h2>News</h2>
            </div>

            <div class="span4">
                <% if user_signed_in?%>
                    <h2>View Trips</h2>
                 <%else%>
                    <h2>Log In</h2>
                 <%end%>
            </div>

            <div class="span4">
                <h2>About</h2>
            </div>
        </div>

    </div>
</div>