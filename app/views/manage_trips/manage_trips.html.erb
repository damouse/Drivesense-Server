   }
   $('#graph').highcharts({
        plotOptions: {
            series: {
                turboThreshold: 0,
                point: {
                    events: {
                          mouseOver: function() {
                              $reporting.html('value: '+ this.y + ' pattern: ' + this.name);
                          }
                    }
                },
                events: {
                    mouseOut: function() {                        
                        $reporting.empty();
                    }
                }
            }
        },
        credits: {
            enabled: false
        },
        chart: {
            type: 'scatter',
            zoomType: 'xy'
        },
        title: {
            text: 'Chart'
        },
        tooltip: {
            formatter: function() {
                return 'Type: <b>'+ this.point.name +
                    '</b> Score: <b>'+ this.y +'</b>';
            }
        },
        xAxis: {
            title: {
                text: 'time (minutes)'
            }
        },
        yAxis: {
            title: {
                text: text
            },
            min: 0,
        },
        series: dic_list
    });
}
